<body>
    <div class="container">
        <header>
            <h1>üèãÔ∏è BMI & Workout Logger</h1>
            <p>Track your fitness journey with style ‚ú®</p>
        </header>
        
        <nav>
            <button onclick="showTab('dashboard')" class="active">üìä Dashboard</button>
            <button onclick="showTab('bmi')">‚öñÔ∏è BMI Calculator</button>
            <button onclick="showTab('workout')">üí™ Workout Log</button>
        </nav>

        <!-- Dashboard -->
        <div id="dashboard" class="tab active">
            <div class="stats">
                <div class="stat">
                    <h2 id="totalWorkouts">0</h2>
                    <p>Total Workouts</p>
                </div>
                <div class="stat">
                    <h2 id="currentBMI">-</h2>
                    <p>Current BMI</p>
                </div>
                <div class="stat">
                    <h2 id="calorieGoal">0</h2>
                    <p>Daily Calories</p>
                </div>
            </div>
            <div id="workoutList"></div>
        </div>

        <!-- BMI Calculator -->
        <div id="bmi" class="tab">
            <div class="form-group">
                <label>üìè Height (cm)</label>
                <input type="number" id="height" placeholder="175" step="0.1">
            </div>
            <div class="form-group">
                <label>‚öñÔ∏è Weight (kg)</label>
                <input type="number" id="weight" placeholder="70" step="0.1">
            </div>
            <div class="form-group">
                <label>üéÇ Age</label>
                <input type="number" id="age" placeholder="25">
            </div>
            <div class="form-group">
                <label>üë§ Gender</label>
                <select id="gender">
                    <option value="male">üë® Male</option>
                    <option value="female">üë© Female</option>
                </select>
            </div>
            <div class="btn-group">
                <button class="btn" onclick="calculateBMI()">Calculate BMI ‚ú®</button>
                <button class="btn btn-danger" onclick="clearBMIForm()">Clear üîÑ</button>
            </div>
            <div id="bmiResult"></div>
        </div>

        <!-- Workout Logger -->
        <div id="workout" class="tab">
            <div class="form-group">
                <label>üèãÔ∏è Exercise Name</label>
                <input type="text" id="exercise" placeholder="Bench Press, Squat, Deadlift...">
            </div>
            <div style="display:grid;grid-template-columns:1fr 1fr 1fr;gap:20px">
                <div class="form-group">
                    <label>üî¢ Sets</label>
                    <input type="number" id="sets" placeholder="3">
                </div>
                <div class="form-group">
                    <label>üìä Reps</label>
                    <input type="number" id="reps" placeholder="10">
                </div>
                <div class="form-group">
                    <label>üí™ Weight (kg)</label>
                    <input type="number" id="workoutWeight" placeholder="60" step="0.5">
                </div>
            </div>
            <div class="btn-group">
                <button class="btn" onclick="addWorkout()">Add Workout üöÄ</button>
                <button class="btn btn-danger" onclick="clearWorkoutForm()">Clear üîÑ</button>
            </div>
            <div id="workoutHistory"></div>
        </div>
    </div>

    <script>
        let workouts = JSON.parse(localStorage.getItem('workouts')) || [];
        let bmiData = JSON.parse(localStorage.getItem('bmiData')) || null;

        function showTab(tabName) {
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('nav button').forEach(btn => btn.classList.remove('active'));
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
            
            if (tabName === 'dashboard') updateDashboard();
        }

        function calculateBMI() {
            const height = parseFloat(document.getElementById('height').value) / 100;
            const weight = parseFloat(document.getElementById('weight').value);
            const age = parseInt(document.getElementById('age').value);
            const gender = document.getElementById('gender').value;

            if (!height || !weight || !age) {
                alert('‚ö†Ô∏è Please fill all fields');
                return;
            }

            const bmi = (weight / (height * height)).toFixed(1);
            let bmr, status, color;
            
            if (gender === 'male') {
                bmr = 88.362 + (13.397 * weight) + (4.799 * document.getElementById('height').value) - (5.677 * age);
            } else {
                bmr = 447.593 + (9.247 * weight) + (3.098 * document.getElementById('height').value) - (4.330 * age);
            }
            
            const dailyCalories = Math.round(bmr * 1.55);

            if (bmi < 18.5) { status = 'Underweight'; color = '#f39c12'; }
            else if (bmi < 25) { status = 'Normal'; color = '#27ae60'; }
            else if (bmi < 30) { status = 'Overweight'; color = '#f39c12'; }
            else { status = 'Obese'; color = '#e74c3c'; }

            bmiData = { bmi, calories: dailyCalories, status, date: new Date().toLocaleDateString() };
            localStorage.setItem('bmiData', JSON.stringify(bmiData));

            document.getElementById('bmiResult').innerHTML = `
                <div class="result">
                    <h2 style="color:${color};font-size:3em;margin-bottom:15px">BMI: ${bmi}</h2>
                    <p style="font-size:1.3em;font-weight:600;margin:10px 0">Status: ${status} ‚ú®</p>
                    <p style="font-size:1.5em;font-weight:700">Daily Calories: ${dailyCalories.toLocaleString()} kcal</p>
                    <p style="opacity:0.9;margin-top:15px">Calculated on ${bmiData.date}</p>
                </div>
            `;
            updateDashboard();
        }

        function addWorkout() {
            const exercise = document.getElementById('exercise').value.trim();
            const sets = document.getElementById('sets').value;
            const reps = document.getElementById('reps').value;
            const weight = document.getElementById('workoutWeight').value;

            if (!exercise || !sets || !reps || !weight) {
                alert('‚ö†Ô∏è Please fill all workout fields');
                return;
            }

            const workout = {
                id: Date.now(),
                exercise,
                sets,
                reps,
                weight,
                date: new Date().toLocaleDateString()
            };

            workouts.unshift(workout);
            localStorage.setItem('workouts', JSON.stringify(workouts));
            
            clearWorkoutForm();
            renderWorkouts();
            updateDashboard();
        }

        function renderWorkouts() {
            const container = document.getElementById('workoutHistory');
            if (workouts.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <svg viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
                        <h3>No workouts yet</h3>
                        <p>Add your first workout above to get started! üí™</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = workouts.slice(0, 8).map(w => `
                <div class="log">
                    <h3 style="color:#2c3e50;margin-bottom:10px">${w.exercise}</h3>
                    <p style="font-size:1.2em;font-weight:600;color:#3498db">
                        ${w.sets} √ó ${w.reps} @ <span style="color:#e74c3c;font-weight:700">${w.weight}kg</span>
                    </p>
                    <p style="color:#7f8c8d;margin:5px 0">${w.date}</p>
                    <button class="btn btn-danger" onclick="deleteWorkout(${w.id})" style="padding:10px 20px;font-size:14px">Delete üóëÔ∏è</button>
                </div>
            `).join('');
        }

        function deleteWorkout(id) {
            if (confirm('Delete this workout? üíî')) {
                workouts = workouts.filter(w => w.id !== id);
                localStorage.setItem('workouts', JSON.stringify(workouts));
                renderWorkouts();
                updateDashboard();
            }
        }

        function updateDashboard() {
            document.getElementById('totalWorkouts').textContent = workouts.length;
            document.getElementById('currentBMI').textContent = bmiData ? bmiData.bmi : '-';
            document.getElementById('calorieGoal').textContent = bmiData ? bmiData.calories.toLocaleString() : '0';
            renderWorkouts();
        }

        function clearWorkoutForm() {
            document.getElementById('exercise').value = '';
            document.getElementById('sets').value = '';
            document.getElementById('reps').value = '';
            document.getElementById('workoutWeight').value = '';
        }

        function clearBMIForm() {
            document.getElementById('height').value = '';
            document.getElementById('weight').value = '';
            document.getElementById('age').value = '';
            document.getElementById('gender').value = 'male';
            document.getElementById('bmiResult').innerHTML = '';
        }

        // Initialize
        updateDashboard();
    </script>
</body>
</html>
